<div class="venue-info">
    <h2>@Model.Name</h2>

    <h3>Address:</h3>
    <address>
        @if (!string.IsNullOrEmpty(Model.Address?.AddressLine1))
        {
            @Model.Address.AddressLine1
            <br/>
        }
        @if (!string.IsNullOrEmpty(Model.Address?.AddressLine2))
        {
            @Model.Address.AddressLine2
            <br/>
        }
        @if (!string.IsNullOrEmpty(Model.Address?.TownOrCity))
        {
            @Model.Address.TownOrCity
            <br/>
        }
        @if (!string.IsNullOrEmpty(Model.Address?.County))
        {
            @Model.Address.County
            <br/>
        }
        @if (!string.IsNullOrEmpty(Model.Address?.Postcode))
        {
            @Model.Address.Postcode
        }
    </address>

    <h3>Parking:</h3>
    <p>@Model.Parking?.Description</p>

    <h3>Pitch Location:</h3>
    <p>@Model.PitchLocation</p>

    <h3>Rules:</h3>
    <ul>
        @foreach (var rule in Model.Rules)
        {
            <li>@rule.Description</li>
        }
    </ul>
</div>