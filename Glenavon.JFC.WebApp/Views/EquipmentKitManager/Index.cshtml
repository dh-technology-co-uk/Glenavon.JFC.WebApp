@model KitsManagerViewModel

@{
    ViewData["Title"] = "Kit Manager";
}

<h2 class="text-left">@ViewData["Title"]</h2>

<div class="container">
    <div class="row">
        @foreach (var statusGroup in Model.RequestsByStatus)
        {
            <div class="col-md-3">

                <div class="card shadow-sm">
                    <div class="card-header text-white text-center kit-header">
                        <h5>@statusGroup.Key</h5>
                    </div>
                    <div class="card-body kit-column" data-status="@statusGroup.Key">
                        @foreach (var item in statusGroup.Value)
                        {
                            var kitsByType = item.Players
                                .GroupBy(p => p.KitType)
                                .ToDictionary(g => g.Key, g => g.ToList());

                            var accordionId = $"accordion-{item.Id}";
                            var collapseId = $"collapse-{item.Id}";
                            var headingId = $"heading-{item.Id}";


                            <div class="accordion mb-2" id="@accordionId">
                                <div class="accordion-item kit-item" draggable="true" data-id="@item.Id">
                                    <h2 class="accordion-header" id="@headingId">
                                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#@collapseId" aria-expanded="false" aria-controls="@collapseId">
                                            Kit Request #@item.Id
                                        </button>
                                    </h2>

                                    <p>
                                        <div>
                                            <strong>Team Name: </strong>@item.TeamName
                                        </div>
                                        <div>
                                            <strong>Requested By: </strong>@item.ManagerName
                                        </div>
                                    </p>

                                    <div id="@collapseId" class="accordion-collapse collapse" aria-labelledby="@headingId" data-bs-parent="#@accordionId">
                                        <div class="accordion-body">
                                            <h6 class="fw-bold">Request Overview</h6>

                                            @foreach (var kitTypeGroup in kitsByType)
                                            {
                                                var kitType = kitTypeGroup.Key;
                                                var players = kitTypeGroup.Value;

                                                var topSizes = players
                                                    .GroupBy(p => p.TopSize)
                                                    .ToDictionary(g => g.Key, g => g.Select(p => p.ShirtNumber).ToList());

                                                var shortsSizes = players
                                                    .GroupBy(p => p.ShortsSize)
                                                    .ToDictionary(g => g.Key, g => g.Count());

                                                var socksSizes = players
                                                    .GroupBy(p => p.SocksSize)
                                                    .ToDictionary(g => g.Key, g => g.Count());

                                                <div class="mb-3 small">
                                                    <h6 class="fw-bold">@kitType Kit</h6>

                                                    <strong>Top Sizes:</strong>
                                                    <ul class="mb-1">
                                                        @foreach (var group in topSizes)
                                                        {
                                                            <li><strong>@group.Key</strong> (@group.Value.Count) Numbers: @string.Join(", ", group.Value)</li>
                                                        }
                                                    </ul>

                                                    <strong>Shorts Sizes:</strong>
                                                    <ul class="mb-1">
                                                        @foreach (var group in shortsSizes)
                                                        {
                                                            <li><strong>@group.Key</strong> (@group.Value)</li>
                                                        }
                                                    </ul>

                                                    <strong>Socks Sizes:</strong>
                                                    <ul class="mb-1">
                                                        @foreach (var group in socksSizes)
                                                        {
                                                            <li><strong>@group.Key</strong> (@group.Value)</li>
                                                        }
                                                    </ul>
                                                </div>
                                            }

                                            <div class="mb-3 d-flex gap-2 align-items-center">
                                                @if (item.Type == "Kit")
                                                {
                                                    <a href="@Url.Action("LoadTeam", "KitRequests", new { id = item.Id })" class="btn btn-secondary btn-sm">
                                                        View Request
                                                    </a>
                                                }
                                                <form asp-action="DeleteItem" method="post" class="d-inline">
                                                    <input type="hidden" name="id" value="@item.Id"/>
                                                    <button type="submit" class="btn btn-sm btn-danger">Remove</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<script src="~/js/kitManager.js"></script>