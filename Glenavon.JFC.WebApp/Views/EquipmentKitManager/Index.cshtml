@model KitsManagerViewModel

@{
    ViewData["Title"] = "Equipment & Kit Manager";
    var isSuperAdmin = User.IsInRole("SuperAdmin");
}

<h2 class="text-left">@ViewData["Title"]</h2>

<div class="container">
    <div class="row">
        @foreach (var statusGroup in Model.RequestsByStatus)
        {
            <div class="col-md-3">

                <div class="card shadow-sm">
                    <div class="card-header text-white text-center kit-header">
                        <h5>@statusGroup.Key</h5>
                    </div>
                    <div class="card-body kit-column" data-status="@statusGroup.Key">
                        @foreach (var item in statusGroup.Value)
                        {
                            var isKit = item.Type == "Kit";
                            var cardClass = isKit ? "kit-item kit card mb-2 p-2 shadow-sm" : "kit-item non-kit card mb-2 p-2 shadow-sm";

                            <div class="@cardClass" data-id="@item.Id" data-type="@item.Type">

                                @if (item.Type == "Kit")
                                {
                                    <h6 class="fw-bold">Kit Request #@item.Id</h6>
                                }
                                else
                                {
                                    <h6 class="fw-bold">Equipment Request #@item.Id</h6>
                                    <h6 class="fw-bold">@item.Type</h6>
                                }

                                <div>
                                    <strong>Team Name:</strong> @item.TeamName
                                </div>
                                <div>
                                    <strong>Requested By:</strong> @item.ManagerName
                                </div>

                                <div class="mt-2 d-flex gap-2 align-items-center">
                                    <div class="d-grid gap-0">
                                        @if (isKit)
                                        {
                                            <form method="get" action="@Url.Action("LoadRequest", "KitRequests", new { id = item.Id })">
                                                <button type="submit" class="btn btn-secondary btn-sm w-100">View</button>
                                            </form>
                                        }
                                        else
                                        {
                                            <form method="get" action="@Url.Action("LoadRequest", "EquipmentRequests", new { id = item.Id })">
                                                <button type="submit" class="btn btn-secondary btn-sm w-100">View</button>
                                            </form>
                                        }

                                        @{
                                            var allStatuses = Model.RequestsByStatus.Keys.ToList();
                                            var currentStatus = statusGroup.Key;
                                        }

                                        <div class="d-flex">
                                            @{
                                                var statusesToShow = allStatuses.Where(s => s != currentStatus).ToList();
                                                int lastIndex = statusesToShow.Count - 1;
                                            }

                                            @for (int i = 0; i < statusesToShow.Count; i++)
                                            {
                                                var status = statusesToShow[i];
                                                var spacingClass = i < lastIndex ? "me-1" : ""; // add spacing except last

                                                <form method="post" class="change-status-form flex-fill @spacingClass" data-id="@item.Id" data-type="@item.Type" data-status="@status">
                                                    <button type="button" class="btn btn-secondary btn-sm w-100">
                                                        @status
                                                    </button>
                                                </form>
                                            }
                                        </div>


                                        @if (isSuperAdmin)
                                        {
                                            <form asp-action="DeleteItem" method="post">
                                                <input type="hidden" name="id" value="@item.Id" />
                                                <input type="hidden" name="type" value="@item.Type" />
                                                <button type="submit" class="btn btn-danger btn-sm w-100">Remove</button>
                                            </form>
                                        }
                                    </div>


                                </div>
                            </div>
                        }

                    </div>
                </div>
            </div>
        }
    </div>
</div>

<script src="~/js/kitManager.js"></script>