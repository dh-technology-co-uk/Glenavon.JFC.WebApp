@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">
        @TempData["Message"]
    </div>
}

<div class="row">
    <div class="col-md-4 offset-md-4">
        <!-- Display error messages if login is unsuccessful -->
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger" role="alert">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <span>@error.ErrorMessage</span>
                }
            </div>
        }

        <form method="post" action="/Account/Login">
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" id="email" name="email" required/>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" id="password" name="password" required/>
            </div>
            <div class="form-group form-check">
                <input type="checkbox" class="form-check-input" id="rememberMe" name="rememberMe"/>
                <label class="form-check-label" for="rememberMe">Remember me</label>
            </div>
            <button type="submit" class="btn btn-primary btn-block">Login</button>
        </form>

        <!-- Additional Links for Forgotten Password and Create Account -->
        <div class="mt-3">
            <p>
                <a href="@Url.Action("ForgotPassword", "Account")">Forgot your password?</a>
            </p>
            <p>
                Don't have an account? <a href="@Url.Action("Register", "Account")">Create one now</a>.
            </p>
        </div>
    </div>
</div>