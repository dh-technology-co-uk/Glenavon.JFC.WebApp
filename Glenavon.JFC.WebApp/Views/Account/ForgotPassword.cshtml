@{
    ViewData["Title"] = "Forgot Password";
}

<h2>Forgot your password?</h2>

<p>Enter your email address below and we'll send you instructions on how to reset your password.</p>

<div class="row">
    <div class="col-md-4 offset-md-4">
        <form method="post" action="/Account/ForgotPassword">
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" id="email" name="email" required/>
            </div>
            <button type="submit" class="btn btn-primary btn-block">Submit</button>
        </form>

        <!-- Additional link for users who already have an account -->
        <div class="mt-3">
            <p>
                Already have an account? <a href="@Url.Action("Login", "Account")">Log in here</a>.
            </p>
        </div>
    </div>
</div>