@model ContactViewModel

@{
    ViewData["Title"] = "Contact Us";
}

<h2 class="text-left">@ViewData["Title"]</h2>

<p class="mb-4">
    Use this form to get in touch with the Glenavon JFC committee with any general questions or enquiries.
    If you’re interested in joining one of our teams, please visit our
    <a asp-controller="Recruitment" asp-action="Index">Recruitment</a>
    page to see our current opportunities.
</p>

<form method="post" asp-action="Submit">
    <div class="form-group">
        <label for="name">Name</label>
        <input asp-for="Name" class="form-control" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="email">Email</label>
        <input asp-for="Email" class="form-control" type="email" required />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="phone">Telephone</label>
        <input asp-for="Phone" class="form-control" type="tel" required />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="message">Message</label>
        <textarea asp-for="Message"
                  class="form-control"
                  rows="5"
                  minlength="150"
                  required></textarea>

        <span asp-validation-for="Message" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Submit</button>
</form>
