@model KitsRequestsViewModel

@{
    ViewData["Title"] = "Kit Requests";
}

<h2 class="text-left">@ViewData["Title"]</h2>

<div class="container">


    <div class="row">
        <div class="col-12">

            <p class="text-left">
                Please use the below form to submit your kit request for the committee to review.
            </p>
            <p class="text-left">
                Please ensure you know all of the information required for a complete order before completing this for to ensure there are no delays between the club and the supplier.
            </p>
        </div>
    </div>
    <form id="teamForm" class="mt-3">
        <!-- Team dropdown -->
        <div class="row mb-3">
            <div class="col-md-6">
                <label class="form-label">Select Team</label>
                <select id="teamSelect" class="form-select" required>
                    <option value="">Select Team</option>
                    @foreach (var team in Model.Teams.DistinctBy(t => t.Name))
                    {
                        <option value="@team.Name">@team.Name</option>
                    }
                </select>
            </div>
        </div>
        <div id="itemRows">
            <div class="row g-2 mb-3 team-item">
                <div class="col-md-2">
                    <div class="form-floating">
                        <select name="TopSize" class="form-select" required>
                            <option value="" disabled selected>Select</option>
                            <option value="XS">XS</option>
                            <option value="S">S</option>
                            <option value="M">M</option>
                            <option value="L">L</option>
                            <option value="XL">XL</option>
                        </select>
                        <label>Top Size</label>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-floating">
                        <select name="ShortsSize" class="form-select" required>
                            <option value="" disabled selected>Select</option>
                            <option value="XS">XS</option>
                            <option value="S">S</option>
                            <option value="M">M</option>
                            <option value="L">L</option>
                            <option value="XL">XL</option>
                        </select>
                        <label>Shorts Size</label>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-floating">
                        <select name="SocksSize" class="form-select" required>
                            <option value="" disabled selected>Select</option>
                            <option value="XS">XS</option>
                            <option value="S">S</option>
                            <option value="M">M</option>
                            <option value="L">L</option>
                            <option value="XL">XL</option>
                        </select>
                        <label>Socks Size</label>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-floating">
                        <input type="number" name="ShirtNumber" class="form-control" min="1" inputmode="numeric" pattern="[0-9]*" required />
                        <label>Shirt Number</label>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-floating">
                        <select name="KitType" class="form-select" required>
                            <option value="" disabled selected>Select</option>
                            <option value="Home">Home</option>
                            <option value="Away">Away</option>
                            <option value="Keeper - Blue">Keeper - Blue</option>
                            <option value="Keeper - Green">Keeper - Green</option>
                            <option value="Keeper - Pink">Keeper - Pink</option>
                        </select>
                        <label>Kit</label>
                    </div>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="button" class="btn btn-danger w-100 h-100" onclick="removeRow(this)">Remove Kit</button>
                </div>
            </div>
        </div>


        <div class="row mt-3">
            <div class="col-md-3">
                <button type="button" class="btn btn-secondary w-100" onclick="addRow()">Add Another Kit</button>
            </div>
            <div class="col-md-3">
                <button type="button" class="btn btn-primary w-100" onclick="submitTeam()">Submit Team Request</button>
            </div>
        </div>

    </form>

</div>

<script src="~/js/kitrequests.js"></script>